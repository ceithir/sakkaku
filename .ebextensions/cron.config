files:
    "/etc/cron.d/renew_https_certificate_cron":
        mode: "000644"
        owner: root
        group: root
        content: |
            0 1,13 * * * root certbot renew --no-self-upgrade

commands:
    remove_old_renew_https_certificate_cron:
        command: "rm -f /etc/cron.d/renew_https_certificate_cron.bak"
        ignoreErrors: true
